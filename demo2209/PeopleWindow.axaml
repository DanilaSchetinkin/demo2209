<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo2209.PeopleWindow"
        Title="PeopleWindow">
  <Grid ShowGridLines="True">
      <Grid.ColumnDefinitions>
		  <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
          <ColumnDefinition></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
		  <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
          <RowDefinition></RowDefinition>
          
      </Grid.RowDefinitions>
      <StackPanel  Grid.Column="2" Grid.Row="0" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center">
          <Image x:Name="imageBox" Width="75" Height="100">
      </Image>
      <TextBlock x:Name="fioBox">
      </TextBlock>
      <TextBlock x:Name="roleBox">
      </TextBlock>
          </StackPanel>
      <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">    
      <TextBox
      Height="50"
      Width="200"
      x:Name="SearchBox"></TextBox>
  </StackPanel>

      </Grid>
    
</Window>
