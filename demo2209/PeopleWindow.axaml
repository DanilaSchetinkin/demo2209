<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo2209.PeopleWindow"
        x:CompileBindings="False"
        Title="PeopleWindow">
  <Grid ShowGridLines="True">
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      
     
      <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
          <Image x:Name="imageBox" Width="75" Height="100"/>
          <TextBlock x:Name="fioBox" />
          <TextBlock x:Name="roleBox" />
      </StackPanel>
      
      
      <StackPanel Grid.Column="0" Grid.Row="0">
          <StackPanel Height="20"></StackPanel>
          <TextBlock Text="История входов" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
          <ListBox x:Name="EnterBox">
              <ListBox.ItemTemplate>
                  <DataTemplate>
                      <Border BorderBrush="Gray" BorderThickness="0,0,0,1" >
                          <StackPanel>
                              <TextBlock Text="{Binding Time}"/>
                              <TextBlock Text="{Binding UserLogin}"/>
                              <TextBlock Text="{Binding LoginType}"/>
                          </StackPanel>
                      </Border>
                  </DataTemplate>
              </ListBox.ItemTemplate>
          </ListBox>
      </StackPanel>

      <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="1">
		  <StackPanel Height="20"></StackPanel>
          <TextBlock Text="Фильтры" HorizontalAlignment="Center"></TextBlock>
      </StackPanel>
      <TextBlock Text="Сортировки: " Grid.Column="1" VerticalAlignment="Bottom" Grid.Row="0"></TextBlock>
     <StackPanel Grid.Column="1" Grid.Row="1">
         <StackPanel>
      <TextBlock Text="Логин"></TextBlock>
             <TextBlock Text="По дате"></TextBlock>
      </StackPanel>
             <ComboBox x:Name="LoginComboBox">
     <ComboBoxItem>По увелечению</ComboBoxItem>
         <ComboBoxItem>По уменьшению</ComboBoxItem>
         <ComboBoxItem>По умолчанию</ComboBoxItem>
     </ComboBox>
         <ComboBox x:Name="DateComboBox">
     <ComboBoxItem>По увелечению</ComboBoxItem>
         <ComboBoxItem>По уменьшению</ComboBoxItem>
         <ComboBoxItem>По умолчанию</ComboBoxItem>
     </ComboBox>
         </StackPanel>
  </Grid>
</Window>