<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:CompileBindings="False"
        x:Class="demo2209.MainWindow"
        Title="demo2209">
	<Grid ShowGridLines="False">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="280"></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition Width="290"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"></RowDefinition>
			<RowDefinition Height="20"></RowDefinition>
			<RowDefinition Height="10"></RowDefinition>
			<RowDefinition Height="20"></RowDefinition>
			<RowDefinition Height="40"></RowDefinition>
			<RowDefinition Height="20"></RowDefinition>
			<RowDefinition Height="40" ></RowDefinition>
			<RowDefinition Height="40"></RowDefinition>
			<RowDefinition></RowDefinition>
			
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Text="Авторизация"></TextBlock>
		<TextBlock Grid.Row="3" Grid.Column="1"  Text="Логин" HorizontalAlignment="Center"></TextBlock>
		<TextBox x:Name="login" Grid.Row="4" Grid.Column="1"   Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBox>
		<TextBlock Grid.Row="5" Grid.Column="1" Text="Пароль" HorizontalAlignment="Center" ></TextBlock>
		<TextBox x:Name="password" Grid.Row="6" Grid.Column="1"   Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" ></TextBox>
		<Button Click="Button_Click" Grid.Row="7" Grid.Column="1" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"    >
			<TextBlock Text="Войти" HorizontalAlignment="Center"></TextBlock>
		</Button>

		<TextBlock Grid.Row="8" 
				   Grid.Column="1" 
				   Foreground="Red"  
				   x:Name="ErrorBox"
				   TextWrapping="Wrap"
				   HorizontalAlignment="Center"></TextBlock>
		
	</Grid>
</Window>
