<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo2209.OrderWindow"
        Title="OrderWindow">
  <Grid ShowGridLines="True">
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      
     
      <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
          <Image x:Name="imageBox" Width="75" Height="100"/>
          <TextBlock x:Name="fioBox" />
          <TextBlock x:Name="roleBox" />
      </StackPanel>

      <Button>
          <TextBlock Text="—формировать заказ"></TextBlock>
      </Button>
      
      </Grid>
</Window>
